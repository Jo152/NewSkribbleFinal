<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalisationFragment"
    android:orientation="vertical"
    android:background="@drawable/paperimg"
    >


    <ImageView
        android:id="@+id/engFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:paddingTop="30dp"
        android:backgroundTint="@color/blue"
        app:srcCompat="@drawable/unitedstatesflag" />

    <ImageView
        android:id="@+id/freFlag"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="30dp"
        app:srcCompat="@drawable/franceflag" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_weight="-0.1" />

    <TextView
        android:id="@+id/selectLangText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="@drawable/border"
        android:layout_weight="-0.1"

        android:text="@string/selectLang" />


</androidx.appcompat.widget.LinearLayoutCompat>